FROM node:21-alpine3.18 as build

WORKDIR /usr/src/app

COPY package*.json ./
RUN npm install

COPY . .

FROM node:21-alpine3.18

RUN apk update \
    && apk upgrade \
    && apk add --no-cache sqlite curl

# USER node

WORKDIR /usr/src/app

COPY --chown=node:node --from=build /usr/src/app .

EXPOSE 8080

HEALTHCHECK CMD curl -f http://localhost:8080/healthz || exit 1

CMD ["npm", "run", "start"]
