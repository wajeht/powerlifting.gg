{
	"name": "powerlifting.gg",
	"version": "0.0.1",
	"type": "module",
	"description": "multitenancy coaching review systems",
	"main": "./src/server.js",
	"bin": {
		"powerlifting": "./src/cli/index.js"
	},
	"scripts": {
		"start": "NODE_ENV=production npm run build && npm run link:command && npm run db:prepare:prod && node ./src/server.js",
		"dev": "concurrently --kill-others --names \"EXPRESS,VUE,TAILWIND\" -c \"bgGreen.black,bgYellow.black,bgCyan.black\" \"npm run dev:server\" \"npm run dev:vue\" \"npm run dev:tailwind\"",
		"dev:vue": "vite build --watch --mode development",
		"dev:server": "npm run link:command && npm run db:prepare:dev && nodemon ./src/server.js",
		"dev:tailwind": "npx tailwindcss -i ./public/css/tailwind.css -o ./public/css/style.css --watch",
		"build": "npm run build:tailwind && npm run build:vue && npm run minify",
		"build:vue": "vite build",
		"build:tailwind": "npx tailwindcss -i ./public/css/tailwind.css -o ./public/css/style.css --minify",
		"build:tailwind:colors": "node ./src/utils/tailwind.js",
		"minify": "if [ \"$NODE_ENV\" != \"development\" ]; then html-minifier --input-dir ./src/web --output-dir ./src/web --collapse-whitespace --minify-js --minify-css --remove-comments --file-ext html; else echo 'Cannot minify in development environment'; fi",
		"update:deps": " npx npm-check -u",
		"check:deps": "npx depcheck",
		"format:check": "prettier --check .",
		"format": "prettier --write .",
		"lint:check": "eslint .",
		"lint": "eslint --fix .",
		"link:command": "npm unlink powerlifting && chmod +x ./src/cli/index.js && npm link",
		"test:watch": "vitest",
		"test": "vitest --run",
		"db:prepare:dev": "rm -f ./src/database/db.sqlite && touch ./src/database/db.sqlite && chmod +w ./src/database/db.sqlite && npm run db:migrate:latest && npm run db:seed:run",
		"db:prepare:prod": "node ./src/utils/prepare-db.js",
		"db:clean": "rm -rf ./src/database/db.sqlite && touch ./src/database/db.sqlite && chmod +w ./src/database/db.sqlite",
		"db:rollback": "knex migrate:rollback --knexfile=./src/database/knexfile.js",
		"db:migrate:make": "knex migrate:make --knexfile=./src/database/knexfile.js",
		"db:migrate:latest": "knex migrate:latest --knexfile=./src/database/knexfile.js",
		"db:migrate:rollback": "knex migrate:rollback --knexfile=./src/database/knexfile.js",
		"db:seed:make": "knex seed:make --knexfile=./src/database/knexfile.js",
		"db:seed:run": "knex seed:run --knexfile=./src/database/knexfile.js",
		"rmds": "find . -name '.DS_Store' -delete"
	},
	"keywords": [
		"node",
		"express",
		"powerlifting.gg"
	],
	"author": "wajeht",
	"license": "MIT",
	"dependencies": {
		"@aws-sdk/client-s3": "^3.572.0",
		"@aws-sdk/lib-storage": "^3.572.0",
		"@bull-board/express": "^5.17.1",
		"@faker-js/faker": "^8.4.1",
		"@sentry/node": "^7.114.0",
		"@sentry/profiling-node": "^7.114.0",
		"@vitejs/plugin-vue": "^5.0.4",
		"axios": "^1.6.8",
		"bad-words": "^3.0.4",
		"bcryptjs": "^2.4.3",
		"bullmq": "^5.7.8",
		"commander": "^12.0.0",
		"compression": "^1.7.4",
		"connect-flash": "^0.1.1",
		"connect-redis": "^7.1.1",
		"cors": "^2.8.5",
		"csrf-sync": "^4.0.3",
		"dayjs": "^1.11.11",
		"dotenv": "^16.4.5",
		"ejs": "^3.1.10",
		"express": "^4.19.2",
		"express-ejs-layouts": "^2.5.1",
		"express-jsdoc-swagger": "^1.8.0",
		"express-rate-limit": "^7.2.0",
		"express-session": "^1.18.0",
		"express-validator": "^7.0.1",
		"gray-matter": "^4.0.3",
		"helmet": "^7.1.0",
		"html-minifier": "^4.0.0",
		"ioredis": "^5.4.1",
		"knex": "^3.1.0",
		"knex-paginate": "^3.1.2",
		"marked": "^12.0.2",
		"multer": "^1.4.5-lts.1",
		"multer-s3": "^3.0.1",
		"nodemailer": "^6.9.13",
		"objection": "^3.1.4",
		"reading-time": "^1.5.0",
		"sqlite3": "^5.1.7",
		"vite": "^5.2.11",
		"vue": "^3.4.21"
	},
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.13",
		"@testing-library/vue": "^8.0.3",
		"autocannon": "^7.15.0",
		"concurrently": "^8.2.2",
		"daisyui": "^4.11.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"ioredis-mock": "^8.9.0",
		"jsdom": "^24.0.0",
		"minify": "^11.1.1",
		"nodemon": "^3.1.0",
		"prettier": "^3.2.5",
		"supertest": "^7.0.0",
		"tailwindcss": "^3.4.3",
		"vitest": "^1.6.0"
	}
}
