{
	"name": "subdomain",
	"version": "0.0.1",
	"type": "module",
	"description": "multi-tendency systems using node and express",
	"main": "./src/server.js",
	"scripts": {
		"start": "NODE_ENV=production && npm run build && npm run db:prepare && node ./src/server.js",
		"dev": "concurrently --kill-others --names \"EXPRESS,VUE,TAILWIND\" -c \"bgGreen.black,bgYellow.black,bgCyan.black\" \"npm run dev:server\" \"npm run dev:vue\" \"npm run dev:tailwind\"",
		"dev:vue": "vite build --watch --mode development",
		"dev:server": "npm run db:prepare && nodemon ./src/server.js",
		"dev:tailwind": "npx tailwindcss -i ./public/css/tailwind.css -o ./public/css/style.css --watch",
		"build": "npm run build:tailwind:colors && npm run build:tailwind && npm run build:vue && npm run minify",
		"build:vue": "vite build",
		"build:tailwind": "npx tailwindcss -i ./public/css/tailwind.css -o ./public/css/style.css --minify",
		"build:tailwind:colors": "node ./src/utils/tailwind.js",
		"minify": "if [ \"$NODE_ENV\" != \"development\" ]; then html-minifier --input-dir ./src/views --output-dir ./src/views --collapse-whitespace --minify-js --minify-css --remove-comments --file-ext html; else echo 'Cannot minify in development environment'; fi",
		"update:deps": " npx npm-check -u",
		"check:deps": "npx depcheck",
		"format:check": "prettier --check .",
		"format": "prettier --write .",
		"lint:check": "eslint .",
		"lint": "eslint --fix .",
		"test:watch": "vitest",
		"test": "vitest --run",
		"db:prepare": "rm -f ./src/database/db.sqlite && touch ./src/database/db.sqlite && chmod +w ./src/database/db.sqlite && npm run db:migrate:latest && npm run db:seed:run",
		"db:clean": "rm -rf ./src/database/db.sqlite && touch ./src/database/db.sqlite",
		"db:rollback": "knex migrate:rollback --knexfile=./src/database/knexfile.js",
		"db:migrate:make": "knex migrate:make --knexfile=./src/database/knexfile.js",
		"db:migrate:latest": "knex migrate:latest --knexfile=./src/database/knexfile.js",
		"db:migrate:rollback": "knex migrate:rollback --knexfile=./src/database/knexfile.js",
		"db:seed:make": "knex seed:make --knexfile=./src/database/knexfile.js",
		"db:seed:run": "knex seed:run --knexfile=./src/database/knexfile.js"
	},
	"keywords": [
		"node",
		"express",
		"subdomain"
	],
	"author": "wajeht",
	"license": "MIT",
	"dependencies": {
		"@faker-js/faker": "^8.4.1",
		"@vitejs/plugin-vue": "^5.0.4",
		"axios": "^1.6.8",
		"bcryptjs": "^2.4.3",
		"compression": "^1.7.4",
		"connect-flash": "^0.1.1",
		"connect-redis": "^7.1.1",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"ejs": "^3.1.9",
		"express": "^4.19.2",
		"express-ejs-layouts": "^2.5.1",
		"express-rate-limit": "^7.2.0",
		"express-session": "^1.18.0",
		"helmet": "^7.1.0",
		"html-minifier": "^4.0.0",
		"ioredis": "^5.3.2",
		"knex": "^3.1.0",
		"nodemailer": "^6.9.13",
		"sqlite3": "^5.1.7",
		"vite": "^5.2.6",
		"vue": "^3.4.21"
	},
	"devDependencies": {
		"@testing-library/vue": "^8.0.3",
		"@vue/test-utils": "^2.4.5",
		"concurrently": "^8.2.2",
		"daisyui": "^4.9.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"ioredis-mock": "^8.9.0",
		"jsdom": "^24.0.0",
		"minify": "^11.1.1",
		"nodemon": "^3.1.0",
		"prettier": "^3.2.5",
		"supertest": "^6.3.4",
		"tailwindcss": "^3.4.1",
		"vitest": "^1.4.0"
	}
}
