{
	"name": "subdomain",
	"version": "0.0.1",
	"type": "module",
	"description": "multi-tendency systems using node and express",
	"main": "./src/server.js",
	"scripts": {
		"start": "npm run db:prepare && node ./src/server.js",
		"dev": "nodemon ./src/server.js",
		"update:deps": " npx npm-check -u",
		"check:deps": "npx depcheck",
		"format:check": "prettier --check .",
		"format": "prettier --write .",
		"lint:check": "eslint .",
		"lint": "eslint --fix .",
		"test:watch": "vitest",
		"test": "vitest --run",
		"db:prepare": "rm -f ./src/database/db.sqlite && touch ./src/database/db.sqlite && chmod +w ./src/database/db.sqlite && npm run db:migrate:latest && npm run db:seed:run",
		"db:clean": "rm -rf ./src/database/db.sqlite && touch ./src/database/db.sqlite",
		"db:rollback": "knex migrate:rollback --knexfile=./src/database/knexfile.js",
		"db:migrate:make": "knex migrate:make --knexfile=./src/database/knexfile.js",
		"db:migrate:latest": "knex migrate:latest --knexfile=./src/database/knexfile.js",
		"db:migrate:rollback": "knex migrate:rollback --knexfile=./src/database/knexfile.js",
		"db:seed:make": "knex seed:make --knexfile=./src/database/knexfile.js",
		"db:seed:run": "knex seed:run --knexfile=./src/database/knexfile.js"
	},
	"keywords": [
		"node",
		"express",
		"subdomain"
	],
	"author": "wajeht",
	"license": "MIT",
	"dependencies": {
		"@faker-js/faker": "^8.4.1",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"ejs": "^3.1.9",
		"express": "^4.19.1",
		"express-ejs-layouts": "^2.5.1",
		"express-rate-limit": "^7.2.0",
		"helmet": "^7.1.0",
		"knex": "^3.1.0",
		"sqlite3": "^5.1.7"
	},
	"devDependencies": {
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"nodemon": "^3.1.0",
		"prettier": "^3.2.5"
	}
}
